# Environment
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/port_cyber

# JWT Secret (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-secret-key-here-change-this

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here-change-this

# Supabase Configuration (optional)
SUPABASE_URL=https://example.supabase.co
SUPABASE_KEY=your-supabase-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
FRONTEND_URL=https://wiltordichingwa.vercel.app
# For development, you can add localhost:
# ALLOWED_ORIGINS=["http://localhost:5173", "https://wiltordichingwa.vercel.app"]

# File Upload
UPLOAD_DIR=uploads/writeups
MAX_FILE_SIZE=10485760

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Port
PORT=8000
